<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/styles/style.css">
    <title>search</title>
</head>
<body>
    <div class="top">
        <h2 class="news">NEWS</h2>
        <form method="get" class="search_box">
            <input type="text" name="search" id="search" placeholder="Search for an article" required>
        </form>
    </div>

    <div class="search_results">
        <h1>Search results for: "{{ searchTerm }}"</h1>
            {% for article in articles %}
                <h3>{{ article.getTitle }}</h3>
                <h4>{{ article.getDescription }}</h4>
                {% if article.getAuthor == null %}
                    <h5>Author : No author cited</h5>
                {% else %}
                    <h5>Author: {{ article.getAuthor }}</h5>
                {% endif %}
                <h5><a href={{ article.getUrl }}> Source </a></h5>
                <h5>____________________</h5>
            {% endfor %}
    </div>
</body>
</html>