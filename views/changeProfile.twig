<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles/profile.css">
    <title>Change Profile</title>
</head>
<body>
    {% include 'navigation.twig' %}<div class="selection">
        <article>
            <form action="/profile_change" method="post">
                <input type="text" name="new_name" id="new_name" placeholder="New name">

                <input type="email" name="new_email" id="new_email" placeholder="New e-mail">

                <input type="password" name="old_password" id="old_password" placeholder="Old password" required>

                <input type="password" name="new_password" id="new_password" placeholder="New password" required>

                <input type="password" name="new_password_repeat" id="old_password_repeat" placeholder="Repeat new password" required>

                <input type="submit" id="submit" value="Submit">

                <div class="incorrect">
                    {% if errors.nameDifference is same as(false) %} This is already your name <br> {% endif %}
                    {% if errors.oldPasswordsMatch is same as(false) %} Incorrect old password <br>{% endif %}
                    {% if errors.newPasswordsMatch is same as(false) %} Passwords aren't the same <br>{% endif %}
                    {% if errors.correctEmail is same as(false) %} Already using this e-mail <br>{% endif %}
                </div>
            </form>
        </article>
    </div>
</body>
</html>